---
export const prerender = false;

import Header from '../../components/Header.astro';
import Sidebar from '../../components/admin/Sidebar.astro';
import DiaryList from '../../components/admin/diary/DiaryList.astro';
import DiaryFilter from '../../components/admin/diary/DiaryFilter.astro';
import DiaryCreate from '../../components/admin/diary/DiaryCreate.astro';

// Auth check
const authCookie = Astro.cookies.get('auth_token');
if (!authCookie || authCookie.value !== 'authorized') {
  return Astro.redirect('/admin/login', 302);
}
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diary Management - Nayuki Blog Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <Header />
    
    <main class="admin-container">
        <Sidebar />

        <div class="content-area">
            <div class="page-header">
                <h2>Diary Management</h2>
            </div>

            <div class="top-section">
                <div class="filter-wrapper">
                    <DiaryFilter />
                </div>
                <div class="create-wrapper">
                    <DiaryCreate />
                </div>
            </div>

            <DiaryList />
        </div>
    </main>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
        }

        .admin-container {
            display: flex;
            min-height: calc(100vh - 60px);
        }

        .content-area {
            flex-grow: 1;
            overflow-x: hidden;
            padding: 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .page-header h2 {
            margin: 0;
            color: #303133;
            font-size: 24px;
        }

        .top-section {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            align-items: stretch;
        }

        .filter-wrapper {
            flex: 1;
        }

        .create-wrapper {
            flex: 1;
        }

        /* Override DiaryFilter margin if needed, but scoped styles might prevent it. 
           We can rely on the wrapper or global styles if necessary. 
           Since DiaryFilter has margin-bottom: 2rem, it might push down inside the wrapper.
           That's fine, or we can try to negate it. */
    </style>
</body>
</html>

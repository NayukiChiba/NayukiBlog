<canvas id="particle-bg"></canvas>

<style>
  #particle-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none; /* Allow clicking through */
  }
</style>

<script>
  const canvas = document.getElementById("particle-bg") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  let width: number = 0;
  let height: number = 0;
  let particles: Particle[] = [];

  // Configuration
  // Using a subtle dark gray for particles to be visible on light background but not distracting
  const baseColor = "0, 0, 0"; // Black RGB
  const particleCountMobile = 40;
  const particleCountDesktop = 60; // Reduced from 90 for "subtle" feel

  function resize() {
    width = window.innerWidth;
    height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;
  }

  class Particle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    size: number;
    opacity: number;
    fadingIn: boolean;
    fadeSpeed: number;

    constructor() {
      this.x = Math.random() * width;
      this.y = Math.random() * height;
      this.vx = (Math.random() - 0.5) * 0.5;
      this.vy = (Math.random() - 0.5) * 0.5;
      this.size = Math.random() * 2; // 0 to 2px, matching index
      this.opacity = Math.random() * 0.5;
      this.fadeSpeed = Math.random() * 0.01 + 0.002;
      this.fadingIn = true;
    }

    update() {
      this.x += this.vx;
      this.y += this.vy;

      // Wrap around screen (matching index behavior instead of bounce)
      if (this.x < 0) this.x = width;
      if (this.x > width) this.x = 0;
      if (this.y < 0) this.y = height;
      if (this.y > height) this.y = 0;

      // Pulse opacity
      if (this.fadingIn) {
        this.opacity += this.fadeSpeed;
        if (this.opacity >= 0.5) this.fadingIn = false;
      } else {
        this.opacity -= this.fadeSpeed;
        if (this.opacity <= 0.1) this.fadingIn = true;
      }
    }

    draw() {
      if (!ctx) return;
      ctx.fillStyle = `rgba(${baseColor}, ${this.opacity})`;
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fill();
    }
  }

  function initParticles() {
    particles = [];
    const count = width < 768 ? particleCountMobile : particleCountDesktop;
    for (let i = 0; i < count; i++) {
      // @ts-ignore
      particles.push(new Particle());
    }
  }

  function animate() {
    if (!ctx) return;
    ctx.clearRect(0, 0, width, height);

    // Update and draw particles
    for (let i = 0; i < particles.length; i++) {
      particles[i].update();
      particles[i].draw();
    }

    requestAnimationFrame(animate);
  }

  window.addEventListener("resize", () => {
    resize();
    initParticles();
  });

  // Init
  resize();
  initParticles();
  animate();
</script>

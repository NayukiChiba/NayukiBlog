---
// 浮动按钮组件 - 显示页面滚动百分比，点击展开圆形菜单
---

<div class="floating-btn-container" id="floating-btn-container">
  <!-- 主按钮 - 显示滚动百分比 + 波浪填充效果 -->
  <button class="floating-main-btn" id="floating-main-btn" aria-label="页面导航菜单">
    <div class="wave-container">
      <div class="wave" id="wave"></div>
    </div>
    <span class="progress-text" id="progress-text">0%</span>
  </button>

  <!-- 菜单选项 - 1/4 圆形排列 -->
  <div class="floating-menu" id="floating-menu">
    <!-- 回到顶部 - 90度位置 (正上方) -->
    <button class="menu-item" id="scroll-top-btn" aria-label="回到顶部" data-tooltip="回到顶部">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="18 15 12 9 6 15"></polyline>
      </svg>
    </button>

    <!-- 管理员面板 - 45度位置 (左上角) -->
    <a class="menu-item" href="/admin" aria-label="管理员面板" data-tooltip="管理面板">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1Z"/>
      </svg>
    </a>

    <!-- 随机友链 - 0度位置 (正左方) -->
    <button class="menu-item" id="random-link-btn" aria-label="随机友链" data-tooltip="开往">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
        <polyline points="15 3 21 3 21 9"/>
        <line x1="10" y1="14" x2="21" y2="3"/>
      </svg>
    </button>
  </div>
</div>

<style>
  .floating-btn-container {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 9999;
  }

  /* 主按钮样式 - 白色带边框 */
  .floating-main-btn {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: white;
    border: 2px solid #e5e5e5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: box-shadow 0.3s ease, border-color 0.3s ease;
    z-index: 10;
    overflow: hidden;
  }

  .floating-main-btn:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    border-color: #d0d0d0;
  }

  /* 波浪容器 */
  .wave-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 50%;
  }

  /* 波浪效果 */
  .wave {
    position: absolute;
    bottom: -100%;
    left: -25%;
    width: 150%;
    height: 200%;
    background: linear-gradient(180deg, rgba(100, 149, 237, 0.3) 0%, rgba(100, 149, 237, 0.5) 100%);
    border-radius: 40%;
    animation: wave 3s ease-in-out infinite;
    transition: bottom 0.3s ease;
  }

  .wave::before {
    content: '';
    position: absolute;
    top: 0;
    left: 10%;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(100, 149, 237, 0.2) 0%, rgba(100, 149, 237, 0.4) 100%);
    border-radius: 45%;
    animation: wave 4s ease-in-out infinite reverse;
  }

  @keyframes wave {
    0%, 100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
  }

  /* 进度文字 */
  .progress-text {
    position: relative;
    font-size: 0.75rem;
    font-weight: 600;
    color: #333;
    z-index: 2;
    user-select: none;
  }

  /* 菜单容器 - 定位在主按钮中心 */
  .floating-menu {
    position: absolute;
    top: 50%;
    left: 50%;
    pointer-events: none;
  }

  /* 菜单项 */
  .menu-item {
    position: absolute;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    border: 1px solid #e5e5e5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: opacity 0.25s ease, transform 0.25s ease, background-color 0.2s ease, color 0.2s ease;
    opacity: 0;
    pointer-events: none;
    text-decoration: none;
    /* 默认在中心（偏移半个宽高使中心对齐） */
    top: -20px;
    left: -20px;
    transform: translate(0, 0);
  }

  /* hover 时只变色，不抖动 */
  .menu-item:hover {
    background: #333;
    color: white;
    border-color: #333;
  }

  /* 展开时的位置 - 垂直向上排列 */
  .floating-menu.active .menu-item {
    opacity: 1;
    pointer-events: auto;
  }

  /* 第一个按钮 - 最上方 */
  .floating-menu.active .menu-item:nth-child(1) {
    transform: translate(0, -160px);
  }

  /* 第二个按钮 - 中间 */
  .floating-menu.active .menu-item:nth-child(2) {
    transform: translate(0, -110px);
  }

  /* 第三个按钮 - 最近 */
  .floating-menu.active .menu-item:nth-child(3) {
    transform: translate(0, -60px);
  }

  /* Tooltip 样式 */
  .menu-item::before {
    content: attr(data-tooltip);
    position: absolute;
    right: calc(100% + 8px);
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.75);
    color: white;
    padding: 0.35rem 0.7rem;
    border-radius: 4px;
    font-size: 0.7rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .menu-item:hover::before {
    opacity: 1;
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .floating-btn-container {
      bottom: 1.5rem;
      right: 1.5rem;
    }

    .floating-main-btn {
      width: 46px;
      height: 46px;
    }

    .menu-item {
      width: 36px;
      height: 36px;
      top: -18px;
      left: -18px;
    }

    .floating-menu.active .menu-item:nth-child(1) {
      transform: translate(0, -130px);
    }

    .floating-menu.active .menu-item:nth-child(2) {
      transform: translate(0, -90px);
    }

    .floating-menu.active .menu-item:nth-child(3) {
      transform: translate(0, -50px);
    }

    .menu-item::before {
      display: none;
    }
  }
</style>

<script>
  // 立即执行函数初始化浮动按钮
  (function initFloatingButton() {
    const mainBtn = document.getElementById('floating-main-btn');
    const menu = document.getElementById('floating-menu');
    const progressText = document.getElementById('progress-text');
    const wave = document.getElementById('wave');
    const scrollTopBtn = document.getElementById('scroll-top-btn');
    const randomLinkBtn = document.getElementById('random-link-btn');

    // 如果元素不存在，等待 DOM 加载完成后重试
    if (!mainBtn) {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initFloatingButton);
      }
      return;
    }

    // 随机友链 - 开往 Travellings
    const travellingLink = 'https://www.travellings.cn/go.html';

    // 更新滚动百分比和波浪高度
    function updateProgress() {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      let scrollPercent = docHeight > 0 ? Math.round((scrollTop / docHeight) * 100) : 0;
      
      // 确保百分比在 0-100 范围内
      scrollPercent = Math.max(0, Math.min(100, scrollPercent));

      if (progressText) {
        progressText.textContent = scrollPercent + '%';
      }

      // 更新波浪高度：0% 时波浪在底部不可见，100% 时完全填满
      if (wave) {
        // bottom 从 -100% (0%) 到 0% (100%)
        const waveBottom = -100 + scrollPercent;
        wave.style.bottom = waveBottom + '%';
      }
    }

    // 切换菜单
    function toggleMenu(e: Event) {
      e.stopPropagation();
      menu?.classList.toggle('active');
    }

    // 关闭菜单
    function closeMenu() {
      menu?.classList.remove('active');
    }

    // 回到顶部
    function scrollToTop(e: Event) {
      e.stopPropagation();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
      closeMenu();
    }

    // 随机友链 - 开往 Travellings
    function goToRandomLink(e: Event) {
      e.stopPropagation();
      window.open(travellingLink, '_blank');
      closeMenu();
    }

    // 事件监听
    mainBtn.addEventListener('click', toggleMenu);
    scrollTopBtn?.addEventListener('click', scrollToTop);
    randomLinkBtn?.addEventListener('click', goToRandomLink);

    // 滚动监听
    window.addEventListener('scroll', updateProgress, { passive: true });

    // 点击外部关闭菜单
    document.addEventListener('click', (e) => {
      const container = document.getElementById('floating-btn-container');
      if (container && !container.contains(e.target as Node)) {
        closeMenu();
      }
    });

    // 初始化进度
    updateProgress();
  })();
</script>

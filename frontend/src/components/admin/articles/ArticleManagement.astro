---
import ArticleList from './ArticleList.astro';
import FilterControls from './FilterControls.astro';
import CategoryFilter from './CategoryFilter.astro';
import UploadArticleDialog from './UploadArticleDialog.astro';
---

<div class="article-management">
    <div class="action-bar">
        <div class="left-actions">
            <button id="upload-btn" class="btn btn-primary">
                <i class="fas fa-plus"></i> Upload Article
            </button>
            <button id="refresh-btn" class="btn btn-secondary">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
        <div class="right-actions">
            <button id="batch-delete-btn" class="btn btn-danger" disabled>
                <i class="fas fa-trash"></i> Batch Delete
            </button>
        </div>
    </div>

    <div class="filter-section">
        <FilterControls />
    </div>

    <div class="content-layout">
        <aside class="category-sidebar">
            <CategoryFilter />
        </aside>
        <main class="article-list-container">
            <ArticleList />
        </main>
    </div>

    <UploadArticleDialog id="upload-dialog" />
</div>

<script>
    // Main controller logic
    document.addEventListener('DOMContentLoaded', () => {
        const uploadBtn = document.getElementById('upload-btn');
        const refreshBtn = document.getElementById('refresh-btn');
        const uploadDialog = document.getElementById('upload-dialog');

        uploadBtn?.addEventListener('click', () => {
            uploadDialog?.dispatchEvent(new CustomEvent('open'));
        });

        refreshBtn?.addEventListener('click', () => {
            document.dispatchEvent(new CustomEvent('refresh-articles'));
        });

        // Listen for upload success to refresh list
        document.addEventListener('article-uploaded', () => {
            document.dispatchEvent(new CustomEvent('refresh-articles'));
        });
    });
</script>

<style>
    .article-management {
        padding: 20px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .action-bar {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .left-actions, .right-actions {
        display: flex;
        gap: 10px;
    }

    .content-layout {
        display: flex;
        gap: 20px;
        margin-top: 20px;
    }

    .category-sidebar {
        width: 280px;
        flex-shrink: 0;
    }

    .article-list-container {
        flex-grow: 1;
        min-width: 0; /* Prevent overflow */
    }

    .btn {
        padding: 8px 16px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.2s;
    }

    .btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-primary {
        background: #409eff;
        color: white;
    }
    .btn-primary:hover { background: #66b1ff; }

    .btn-secondary {
        background: #fff;
        border: 1px solid #dcdfe6;
        color: #606266;
    }
    .btn-secondary:hover { color: #409eff; border-color: #c6e2ff; background-color: #ecf5ff; }

    .btn-danger {
        background: #f56c6c;
        color: white;
    }
    .btn-danger:hover { background: #f78989; }

    @media (max-width: 768px) {
        .content-layout {
            flex-direction: column;
        }
        .category-sidebar {
            width: 100%;
        }
    }
</style>

<div class="book-list-card">
    <div class="card-header">
        <span>Library List</span>
        <span class="count" id="book-count">0 books</span>
    </div>
    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="col-title">Title</th>
                    <th class="col-status">Status</th>
                    <th class="col-rating">Rating</th>
                    <th class="col-tags">Tags</th>
                    <th class="col-actions">Actions</th>
                </tr>
            </thead>
            <tbody id="book-table-body">
                <tr><td colspan="5" class="loading-text">Loading...</td></tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    interface Book {
        id: number;
        title: string;
        cover?: string;
        url?: string;
        status?: string;
        rating?: number;
        tags?: string[];
    }

    async function fetchBooks() {
        const tbody = document.getElementById('book-table-body');
        const countSpan = document.getElementById('book-count');
        if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="loading-text">Loading...</td></tr>';

        const urlParams = new URLSearchParams(window.location.search);
        const apiParams = new URLSearchParams();
        
        const status = urlParams.get('status');
        if (status && status !== 'all') apiParams.append('status', status);
        
        const tags = urlParams.getAll('tags');
        tags.forEach(tag => apiParams.append('tags', tag));

        try {
            const res = await fetch(`http://127.0.0.1:8000/api/admin/books?${apiParams.toString()}`);
            if (!res.ok) throw new Error('Failed to fetch');
            const books: Book[] = await res.json();

            if (countSpan) countSpan.textContent = `${books.length} books`;

            if (tbody) {
                if (books.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="5" class="loading-text">No books found.</td></tr>';
                    return;
                }
                tbody.innerHTML = books.map(book => `
                    <tr>
                        <td class="col-title"><span class="title-text" title="${book.title}">${book.title}</span></td>
                        <td class="col-status"><span class="status-badge ${book.status?.toLowerCase() || 'unknown'}">${book.status || 'Unknown'}</span></td>
                        <td class="col-rating"><span class="rating-stars">${book.rating ? '★'.repeat(book.rating) : '-'}</span></td>
                        <td class="col-tags"><div class="tags-wrapper">${book.tags ? (typeof book.tags === 'string' ? JSON.parse(book.tags) : book.tags).map((t: string) => `<span class="tag">${t}</span>`).join('') : '-'}</div></td>
                        <td class="col-actions">
                            <button class="btn-action edit" title="Edit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                            </button>
                            <button class="btn-action delete" title="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                            </button>
                        </td>
                    </tr>
                `).join('');
            }
        } catch (error) {
            console.error(error);
            if(tbody) tbody.innerHTML = '<tr><td colspan="5" class="error-text">Failed to load books.</td></tr>';
        }
    }

    fetchBooks();

    window.addEventListener('book-filter-change', () => {
        fetchBooks();
    });

    window.addEventListener('popstate', () => {
        fetchBooks();
    });
</script>

<style>
    .book-list-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 18px;
        font-weight: 600;
        color: #303133;
    }

    .count {
        font-size: 14px;
        color: #909399;
        font-weight: normal;
    }

    .table-container {
        overflow-x: auto;
    }

    .admin-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
        table-layout: fixed;
    }

    .admin-table th {
        text-align: center;
        padding: 12px 16px;
        color: #909399;
        font-weight: 600;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5; /* 添加竖线 */
        background-color: #f9fafb;
    }

    .admin-table th:last-child {
        border-right: none;
    }

    .admin-table :global(td) {
        padding: 12px 16px;
        border-bottom: 1px solid #ebeef5;
        border-right: 1px solid #ebeef5; /* 添加竖线 */
        color: #606266;
        vertical-align: middle;
    }

    .admin-table :global(td:last-child) {
        border-right: none;
    }

    /* Column Widths */
    :global(.col-title) { width: 30%; }
    :global(.col-status) { width: 15%; }
    :global(.col-rating) { width: 15%; }
    :global(.col-tags) { width: 25%; }
    :global(.col-actions) { width: 15%; text-align: center; } /* Actions 居中 */

    :global(.title-text) {
        display: block;
        width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        font-weight: 500;
        color: #303133;
    }

    :global(.status-badge) {
        padding: 2px 8px;
        border-radius: 12px;
        font-size: 12px;
        background: #f4f4f5;
        color: #909399;
        display: inline-block;
    }

    :global(.status-badge.published) { background: #d1fae5; color: #065f46; }
    :global(.status-badge.draft) { background: #fef3c7; color: #92400e; }
    :global(.status-badge.archived) { background: #f3f4f6; color: #374151; }

    :global(.rating-stars) {
        color: #f7ba2a;
        letter-spacing: 2px;
    }

    :global(.tags-wrapper) {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
    }

    :global(.tag) {
        display: inline-block;
        background: #f4f4f5;
        color: #909399;
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 12px;
    }

    :global(.btn-action) {
        background: none;
        border: none;
        cursor: pointer;
        padding: 6px;
        border-radius: 4px;
        color: #909399;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 2px; /* 调整间距，使其在居中时更好看 */
    }

    :global(.btn-action:hover) {
        background-color: #f0f2f5;
    }

    :global(.btn-action.edit:hover) { color: #409eff; background-color: #ecf5ff; }
    :global(.btn-action.delete:hover) { color: #f56c6c; background-color: #fef0f0; }

    :global(.loading-text), :global(.error-text) {
        text-align: center;
        padding: 20px;
        color: #909399;
    }
    :global(.error-text) { color: #f56c6c; }
</style>

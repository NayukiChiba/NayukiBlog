---
// 浮动按钮组件 - 显示页面滚动百分比，点击展开圆形菜单

// 从环境变量读取 Admin URL
const adminUrl = import.meta.env.PUBLIC_ADMIN_URL || "/admin";
---

<div class="floating-btn-container" id="floating-btn-container">
  <!-- 主按钮 - 显示滚动百分比 + 波浪填充效果 -->
  <button
    class="floating-main-btn"
    id="floating-main-btn"
    aria-label="页面导航菜单"
  >
    <div class="wave-container">
      <div class="wave" id="wave"></div>
    </div>
    <span class="progress-text" id="progress-text">0%</span>
  </button>

  <!-- 菜单选项 -->
  <div class="floating-menu" id="floating-menu">
    <!-- 回到顶部 -->
    <button
      class="menu-item"
      id="scroll-top-btn"
      aria-label="回到顶部"
      data-tooltip="回到顶部"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <polyline points="18 15 12 9 6 15"></polyline>
      </svg>
    </button>

    <!-- 管理员面板 -->
    <a
      class="menu-item"
      id="admin-link"
      href={adminUrl}
      aria-label="管理员面板"
      data-tooltip="管理面板"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"></path>
        <path
          d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1Z"
        ></path>
      </svg>
    </a>

    <!-- Theme Switcher Button -->
    <button
      class="menu-item"
      id="theme-toggle-btn"
      aria-label="切换主题"
      data-tooltip="主题色"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/></svg>
    </button>
    
    <!-- Custom Panel for Theme (Clashing Colors) -->
    <div id="theme-panel-floating" class="theme-panel hidden" onclick="event.stopPropagation()">
      <div class="clashing-colors-container">
          <div class="color-picker-group">
              <label for="color-1-input" class="picker-label-text">Color 1</label>
              <div class="color-picker-wrapper">
                <input type="color" id="color-1-input" class="color-input" value="#FBC6B5">
                <div class="picker-swatch" id="swatch-1"></div>
              </div>
          </div>
          
          <div class="color-picker-group">
              <label for="color-2-input" class="picker-label-text">Color 2</label>
              <div class="color-picker-wrapper">
                <input type="color" id="color-2-input" class="color-input" value="#F0CFE3">
                <div class="picker-swatch" id="swatch-2"></div>
              </div>
          </div>
      </div>
    </div>

    <!-- 随机友链 - 开往 Travellings -->
    <button
      class="menu-item"
      id="random-link-btn"
      aria-label="随机友链"
      data-tooltip="开往"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
        ></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </button>
  </div>
</div>

<style>
  .floating-btn-container {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    z-index: 9999;
  }

  /* 主按钮样式 - 白色带边框 */
  .floating-main-btn {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: white;
    border: 2px solid #e5e5e5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition:
      box-shadow 0.3s ease,
      border-color 0.3s ease;
    z-index: 10;
    overflow: hidden;
  }

  .floating-main-btn:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    border-color: #d0d0d0;
  }

  /* 波浪容器 */
  .wave-container {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
    border-radius: 50%;
  }

  /* 波浪效果 */
  .wave {
    position: absolute;
    bottom: -100%;
    left: -25%;
    width: 150%;
    height: 200%;
    /* 使用 Color 1 */
    background: var(--color-primary);
    /* 移除 Mask image，确保清晰可见 */
    opacity: 1; 
    border-radius: 40%;
    animation: wave 3s ease-in-out infinite;
    transition: bottom 0.3s ease;
  }

  .wave::before {
    content: "";
    position: absolute;
    top: 0;
    left: 10%;
    width: 100%;
    height: 100%;
    /* 使用 Color 2 实现撞色 */
    background: var(--color-secondary);
    border-radius: 45%;
    animation: wave 4s ease-in-out infinite reverse;
    opacity: 0.9; /* 稍微透明一点，以便叠加 */
  }

  @keyframes wave {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(180deg);
    }
  }

  /* 进度文字 */
  .progress-text {
    position: relative;
    font-size: 0.75rem;
    font-weight: 600;
    color: #333;
    z-index: 2;
    user-select: none;
  }

  /* 菜单容器 - 定位在主按钮中心 */
  .floating-menu {
    position: absolute;
    top: 50%;
    left: 50%;
    pointer-events: none;
  }

  /* 菜单项 */
  .menu-item {
    position: absolute;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    border: 1px solid #e5e5e5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition:
      opacity 0.25s ease,
      transform 0.25s ease,
      background-color 0.2s ease,
      color 0.2s ease;
    opacity: 0;
    pointer-events: none;
    text-decoration: none;
    /* 默认在中心（偏移半个宽高使中心对齐） */
    top: -20px;
    left: -20px;
    transform: translate(0, 0);
  }

  /* Custom Color Picker Style - handled below in main block */


  /* hover 时只变色，不抖动 */
  .menu-item:hover {
    background: #333;
    color: white;
    border-color: #333;
  }

  /* 展开时的位置 */
  .floating-menu.active .menu-item {
    opacity: 1;
    pointer-events: auto;
  }

  /* 第一个按钮 - 最上方 (Scroll Top) */
  .floating-menu.active .menu-item:nth-child(1) {
    transform: translate(0, -210px);
    transition-delay: 0.2s;
  }

  /* 第二个按钮 - (Admin) */
  .floating-menu.active .menu-item:nth-child(2) {
    transform: translate(0, -160px);
    transition-delay: 0.15s;
  }

  /* Theme Panel (Hidden by default, shown when toggled) */
  /* This doesn't need transform, it's positioned absolutely relative to container */

  /* 第三个按钮 - (Theme Toggle) */
  .floating-menu.active .menu-item:nth-child(3) {
    transform: translate(0, -110px);
    transition-delay: 0.1s;
  }

  /* 第四个元素是 Theme Panel (not menu item), 第五个是 Random Link */
  /* 第五个按钮 - (Random Link) */
  .floating-menu.active .menu-item:nth-child(5) {
    transform: translate(0, -60px);
    transition-delay: 0.05s;
  }

  /* Theme Panel in Floating Menu */
  .theme-panel {
    position: absolute;
    bottom: 120px;
    right: 60px;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 10px;
    box-shadow: var(--shadow-lg);
    width: max-content;
    transform-origin: bottom right;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1001;
    pointer-events: auto;
    opacity: 1;
    display: block;
    /* Limit width for compact grid */
    max-width: 220px;
  }

  .theme-panel.hidden {
    opacity: 0;
    transform: scale(0.9) translateX(10px);
    pointer-events: none;
    display: none; 
  }

  /* Custom Single Picker - Deprecated for new design */
  /* New Styles for Clashing Colors Panel */
  .clashing-colors-container {
      display: flex;
      flex-direction: column;
      gap: 12px;
  }
  
  .color-picker-group {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
  }
  
  .picker-label-text {
      font-size: 0.85rem;
      font-weight: 500;
      color: var(--color-text);
  }

  .color-picker-wrapper {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    overflow: hidden;
    position: relative;
    cursor: pointer;
    box-shadow: 0 0 0 1px #e5e5e5;
    background: white;
  }

  .picker-swatch {
      width: 100%;
      height: 100%;
      background: #eee; /* Default pending JS init */
      border: 2px solid white;
      box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1);
  }

  #color-1-input + #swatch-1 {
      background: var(--color-primary);
  }
  
  #color-2-input + #swatch-2 {
      background: var(--color-secondary);
  }
  
  .color-input {
      position: absolute;
      top: -10px;
      left: -10px;
      width: 200%;
      height: 200%;
      cursor: pointer;
      opacity: 0;
      z-index: 2;
  }

  /* Compact Grid Layout for 5 items - Deprecated/Hidden */
  .color-options {
    display: none; 
  }

  /* Color Buttons */

  /* Tooltip 样式 */
  .menu-item::before {
    content: attr(data-tooltip);
    position: absolute;
    right: calc(100% + 8px);
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.75);
    color: white;
    padding: 0.35rem 0.7rem;
    border-radius: 4px;
    font-size: 0.7rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .menu-item:hover::before {
    opacity: 1;
  }

  /* 移动端适配 */
  @media (max-width: 768px) {
    .floating-btn-container {
      bottom: 1.5rem;
      right: 1.5rem;
    }

    .floating-main-btn {
      width: 46px;
      height: 46px;
    }

    .menu-item {
      width: 36px;
      height: 36px;
      top: -18px;
      left: -18px;
    }

    .floating-menu.active .menu-item:nth-child(1) {
      transform: translate(0, -130px);
    }

    .floating-menu.active .menu-item:nth-child(2) {
      transform: translate(0, -90px);
    }

    .floating-menu.active .menu-item:nth-child(3) {
      transform: translate(0, -50px);
    }

    /* Adjust Theme Panel for Mobile */
    .theme-panel {
        bottom: 120px;
        right: 60px;
        min-width: 140px;
    }

    .menu-item::before {
      display: none;
    }
  }
</style>

<script>
  // 立即执行函数初始化浮动按钮
  (function initFloatingButton() {
    const mainBtn = document.getElementById("floating-main-btn");
    const menu = document.getElementById("floating-menu");
    const progressText = document.getElementById("progress-text");
    const wave = document.getElementById("wave");
    const scrollTopBtn = document.getElementById("scroll-top-btn");
    const randomLinkBtn = document.getElementById("random-link-btn");
    
    // Theme Elements
    const themeToggleBtn = document.getElementById("theme-toggle-btn");
    const themePanel = document.getElementById("theme-panel-floating");
    const colorBtns = document.querySelectorAll<HTMLElement>(".color-btn");

    // 如果元素不存在，等待 DOM 加载完成后重试
    if (!mainBtn) {
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initFloatingButton);
      }
      return;
    }

    // 随机友链 - 开往 Travellings
    const travellingLink = "https://www.travellings.cn/go.html";

    // 更新滚动百分比和波浪高度
    function updateProgress() {
      const scrollTop = window.scrollY;
      const docHeight =
        document.documentElement.scrollHeight - window.innerHeight;
      let scrollPercent =
        docHeight > 0 ? Math.round((scrollTop / docHeight) * 100) : 0;

      // 确保百分比在 0-100 范围内
      scrollPercent = Math.max(0, Math.min(100, scrollPercent));

      if (progressText) {
        progressText.textContent = scrollPercent + "%";
      }

      // 更新波浪高度：0% 时波浪在底部不可见，100% 时完全填满
      if (wave) {
        // bottom 从 -100% (0%) 到 0% (100%)
        const waveBottom = -100 + scrollPercent;
        wave.style.bottom = waveBottom + "%";
      }
    }

    // 切换菜单
    function toggleMenu(e: Event) {
      e.stopPropagation();
      menu?.classList.toggle("active");
      // Close theme panel when closing menu
      if (!menu?.classList.contains("active")) {
          themePanel?.classList.add("hidden");
      }
    }

    // 关闭菜单
    function closeMenu() {
      menu?.classList.remove("active");
      themePanel?.classList.add("hidden");
    }

    // 回到顶部
    function scrollToTop(e: Event) {
      e.stopPropagation();
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
      closeMenu();
    }

    // 随机友链 - 开往 Travellings
    function goToRandomLink(e: Event) {
      e.stopPropagation();
      window.open(travellingLink, "_blank");
      closeMenu();
    }

    // Toggle Theme Panel
    function toggleThemePanel(e: Event) {
        e.stopPropagation();
        themePanel?.classList.toggle("hidden");
    }

    // Set Theme Color (Clashing Colors)
    function setThemeColor(color1: string, color2: string) {
        const root = document.documentElement;
        
        // Update variables
        root.style.setProperty('--color-primary', color1);
        root.style.setProperty('--color-secondary', color2);
        
        // Update gradient-primary for solid block contrast or simple linear mix
        // As requested: "No gradient", but we might want variables to reflect the pair
        // Let's set gradient-primary to color1, and have secondary available
        root.style.setProperty('--gradient-primary', color1);
        root.style.setProperty('--gradient-text', color1);
        root.style.setProperty('--color-accent', color2);
        
        // Update local storage
        localStorage.setItem('theme-color-1', color1);
        localStorage.setItem('theme-color-2', color2);
        
        // Provide visual feedback
        updateActiveButton(color1, color2);
    }
    
    function updateActiveButton(c1: string, c2: string) {
       // Logic to highlight active or custom pair
       // Since it's custom, we might just update the inputs if picking custom
    }

    // Initialize Theme
    function initTheme() {
        const c1 = localStorage.getItem('theme-color-1') || '#FBC6B5'; // Default 1
        const c2 = localStorage.getItem('theme-color-2') || '#F0CFE3'; // Default 2
        
        setThemeColor(c1, c2);
        
        // Update inputs if they exist
        if (input1) input1.value = c1;
        if (input2) input2.value = c2;
    }

    const input1 = document.getElementById("color-1-input") as HTMLInputElement;
    const input2 = document.getElementById("color-2-input") as HTMLInputElement;

    // 事件监听
    mainBtn.addEventListener("click", toggleMenu);
    scrollTopBtn?.addEventListener("click", scrollToTop);
    randomLinkBtn?.addEventListener("click", goToRandomLink);
    
    themeToggleBtn?.addEventListener("click", toggleThemePanel);
    
    // Custom Color Inputs
    function handleColorChange() {
        const c1 = input1?.value || '#FBC6B5';
        const c2 = input2?.value || '#F0CFE3';
        setThemeColor(c1, c2);
    }

    input1?.addEventListener("input", (e) => { e.stopPropagation(); handleColorChange(); });
    input2?.addEventListener("input", (e) => { e.stopPropagation(); handleColorChange(); });
    
    input1?.addEventListener("click", (e) => e.stopPropagation());
    input2?.addEventListener("click", (e) => e.stopPropagation());
    
    // 滚动监听
    window.addEventListener("scroll", updateProgress, { passive: true });

    // 点击外部关闭菜单
    document.addEventListener("click", (e) => {
      const container = document.getElementById("floating-btn-container");
      // Check if click is outside container AND outside theme panel (though theme panel is inside container usually, but let's be safe)
      if (container && !container.contains(e.target as Node)) {
        closeMenu();
      }
    });

    // 初始化进度
    updateProgress();
    // 初始化主题
    initTheme();
  })();
</script>

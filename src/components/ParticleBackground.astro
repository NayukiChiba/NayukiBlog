<canvas id="particle-bg"></canvas>

<style>
  #particle-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    background: var(--color-bg, #fafafa);
  }
</style>

<script>
  const canvas = document.getElementById("particle-bg") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  let width: number = 0;
  let height: number = 0;
  let particles: Particle[] = [];

  // Configuration
  // Dynamic colors based on CSS variables
  let colors: string[] = [];

  function updateColors() {
    const style = getComputedStyle(document.documentElement);
    const primary = style.getPropertyValue('--color-primary').trim();
    const primaryLight = style.getPropertyValue('--color-primary-light').trim();
    
    // Function to parse color string to "r, g, b"
    const parseColor = (color: string) => {
      // Check for rgb/rgba format
      const rgbMatch = color.match(/^rgba?\((\d+),\s*(\d+),\s*(\d+)/);
      if (rgbMatch) {
        return `${rgbMatch[1]}, ${rgbMatch[2]}, ${rgbMatch[3]}`;
      }
      
      // Check for hex format
      const hexMatch = color.match(/^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i);
      if (hexMatch) {
        return `${parseInt(hexMatch[1], 16)}, ${parseInt(hexMatch[2], 16)}, ${parseInt(hexMatch[3], 16)}`;
      }
      
      // Shorthand hex
      const shortHexMatch = color.match(/^#?([a-f\d])([a-f\d])([a-f\d])$/i);
      if (shortHexMatch) {
        const r = shortHexMatch[1] + shortHexMatch[1];
        const g = shortHexMatch[2] + shortHexMatch[2];
        const b = shortHexMatch[3] + shortHexMatch[3];
        return `${parseInt(r, 16)}, ${parseInt(g, 16)}, ${parseInt(b, 16)}`;
      }

      return "200, 200, 200"; // Fallback grey
    };

    const c1 = parseColor(primary);
    const c2 = parseColor(primaryLight);
    
    // Use primary color variants for particles
    colors = [
      c1,
      c2,
      "240, 240, 240", // Light grey
    ];
  }

  // Initial update
  updateColors();

  // Watch for theme changes (optional, but good for robust switching)
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.type === "attributes" && mutation.attributeName === "style") {
        updateColors();
      }
    });
  });
  observer.observe(document.documentElement, { attributes: true });

  const particleCountMobile = 25; // Reduce count for cleaner look
  const particleCountDesktop = 40;

  function resize() {
    width = window.innerWidth;
    height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;
  }

  class Particle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    size: number;
    color: string;
    opacity: number;
    fadingIn: boolean;
    fadeSpeed: number;

    constructor() {
      this.x = Math.random() * width;
      this.y = Math.random() * height;
      this.vx = (Math.random() - 0.5) * 0.4; // Gentle movement
      this.vy = (Math.random() - 0.5) * 0.4;
      this.size = Math.random() * 3 + 2; // 2 to 5px - Visible but not huge
      this.color = colors[Math.floor(Math.random() * colors.length)];
      this.opacity = Math.random() * 0.4 + 0.3; // 0.3 to 0.7 - Clearly visible but transparent
      this.fadeSpeed = Math.random() * 0.005 + 0.002;
      this.fadingIn = Math.random() > 0.5;
    }

    update() {
      this.x += this.vx;
      this.y += this.vy;

      // Wrap around screen
      if (this.x < 0) this.x = width;
      if (this.x > width) this.x = 0;
      if (this.y < 0) this.y = height;
      if (this.y > height) this.y = 0;

      // Pulse opacity
      if (this.fadingIn) {
        this.opacity += this.fadeSpeed;
        if (this.opacity >= 0.8) this.fadingIn = false;
      } else {
        this.opacity -= this.fadeSpeed;
        if (this.opacity <= 0.2) this.fadingIn = true;
      }
    }

    draw() {
      if (!ctx) return;
      ctx.fillStyle = `rgba(${this.color}, ${this.opacity})`;
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fill();

      // Optional: Add a subtle glow
      // ctx.shadowBlur = 5;
      // ctx.shadowColor = `rgba(${this.color}, 0.5)`;
    }
  }

  function initParticles() {
    particles = [];
    const count = width < 768 ? particleCountMobile : particleCountDesktop;
    for (let i = 0; i < count; i++) {
      // @ts-ignore
      particles.push(new Particle());
    }
  }

  function animate() {
    if (!ctx) return;
    ctx.clearRect(0, 0, width, height);

    // Update and draw particles
    for (let i = 0; i < particles.length; i++) {
      particles[i].update();
      particles[i].draw();
    }

    requestAnimationFrame(animate);
  }

  window.addEventListener("resize", () => {
    resize();
    initParticles();
  });

  // Init
  resize();
  initParticles();
  animate();
</script>

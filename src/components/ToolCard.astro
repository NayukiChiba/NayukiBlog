---
interface Props {
    name: string;
    description?: string;
    url?: string;
    icon?: string;
}

const { name, description = '', url = '#', icon = 'üîß' } = Astro.props;
---

<a href={url} target="_blank" rel="noopener noreferrer" class="tool-card">
    <div class="tool-icon">
        {
            icon && icon.startsWith("<svg") ? (
                <Fragment set:html={icon} />
            ) : icon && (icon.startsWith("http") || icon.startsWith("/")) ? (
                <img src={icon} alt={name} class="tool-icon-img" />
            ) : (
                <span class="emoji-icon">{icon || "üîß"}</span>
            )
        }
    </div>
    <div class="tool-content">
        <div class="tool-header">
            <h3 class="tool-name">{name}</h3>
        </div>
        <p class="tool-desc">{description}</p>
    </div>
</a>

<style>
    .tool-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: #fff;
        border: 1px solid #eaeaea;
        border-radius: 12px;
        padding: 1.2rem;
        text-decoration: none;
        transition: all 0.3s ease;
        height: 100%;
        box-sizing: border-box;
    }

    .tool-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
        /* ÂΩóÊòüÊµÅÂÖâËæπÊ°Ü */
        border: 2px solid transparent;
        background-color: transparent;
        background-image:
            linear-gradient(#ffffff, #ffffff),
            conic-gradient(
                from var(--border-angle),
                transparent 0deg,
                var(--radial-c1) 40deg,
                var(--radial-c2) 70deg,
                transparent 100deg,
                transparent 360deg
            );
        background-clip: padding-box, border-box;
        background-origin: padding-box, border-box;
        animation: borderSpin 2.5s linear infinite;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06), 0 0 16px color-mix(in srgb, var(--radial-c1) 40%, transparent);
    }

    .tool-icon {
        width: 48px;
        height: 48px;
        background: #f5f5f5;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }

    .tool-icon :global(svg) {
        width: 24px;
        height: 24px;
    }

    .tool-icon-img {
        width: 32px;
        height: 32px;
        object-fit: contain;
    }

    .emoji-icon {
        font-size: 1.5rem;
    }

    .tool-content {
        flex: 1;
        min-width: 0; /* Prevent text overflow issues */
    }

    .tool-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.3rem;
    }

    .tool-name {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: #111;
    }

    .tool-desc {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

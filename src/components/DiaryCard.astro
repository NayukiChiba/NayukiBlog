---
interface Props {
  date: string;
  content: string;
  mood: string;
  weather?: string;
  images?: string[];
}

const { date, content, mood, weather, images = [] } = Astro.props;
const validImages = Array.isArray(images) ? images : [];

const d = new Date(date);
const displayDate = isNaN(d.getTime())
  ? date
  : d.getFullYear() +
    "-" +
    String(d.getMonth() + 1).padStart(2, "0") +
    "-" +
    String(d.getDate()).padStart(2, "0") +
    " " +
    String(d.getHours()).padStart(2, "0") +
    ":" +
    String(d.getMinutes()).padStart(2, "0");

const moodMap: Record<string, string> = {
  happy: "üòä",
  relieved: "üòå",
  sad: "üò¢",
  angry: "üò†",
  neutral: "üòê",
  excited: "ü§©",
  tired: "üò´",
};

const weatherMap: Record<string, string> = {
  sunny: "‚òÄÔ∏è",
  cloudy: "‚òÅÔ∏è",
  rainy: "üåßÔ∏è",
  snowy: "‚ùÑÔ∏è",
  windy: "üí®",
};
---

<div class="timeline-item">
  <div class="timeline-marker"></div>
  <div class="timeline-content">
    <details class="diary-details">
      <summary class="diary-summary">
        <span class="diary-date">{displayDate}</span>
        <span class="diary-mood-preview">{moodMap[mood] || "üòê"}</span>
      </summary>

      <div class="diary-card-inner">
        <div class="diary-header">
          <div class="meta-group">
            <span class="meta-item" title="Date">üìÖ {displayDate}</span>
            {
              weather && (
                <span class="meta-item" title="Weather">
                  {weatherMap[weather] || "üå§Ô∏è"}
                  <span class="meta-text">{weather}</span>
                </span>
              )
            }
            <span class="meta-item" title="Mood">
              {moodMap[mood] || "üòê"}
              <span class="meta-text">{mood}</span>
            </span>
          </div>
        </div>
        <div class="diary-body">
          <p>{content}</p>
          {
            validImages.length > 0 && (
              <div class="diary-images">
                {validImages.map((img) => (
                  <img src={img} alt="Diary attachment" loading="lazy" />
                ))}
              </div>
            )
          }
        </div>
      </div>
    </details>
  </div>
</div>

<!-- Image Lightbox -->
<div id="diary-image-lightbox" class="diary-lightbox">
  <div class="diary-lightbox-overlay"></div>
  <div class="diary-lightbox-content">
    <button class="diary-lightbox-close" aria-label="ÂÖ≥Èó≠">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <img id="diary-lightbox-image" src="" alt="" />
  </div>
</div>

<script>
  // Image lightbox functionality
  const setupDiaryImageLightbox = () => {
    const lightbox = document.getElementById("diary-image-lightbox");
    const lightboxImg = document.getElementById(
      "diary-lightbox-image"
    ) as HTMLImageElement;
    const lightboxClose = document.querySelector(".diary-lightbox-close");
    const lightboxOverlay = document.querySelector(".diary-lightbox-overlay");

    // Get all diary images
    const diaryImages = document.querySelectorAll(".diary-images img");

    // Open lightbox function
    const openLightbox = (imgElement: HTMLImageElement) => {
      if (lightbox && lightboxImg) {
        lightboxImg.src = imgElement.src;
        lightboxImg.alt = imgElement.alt;
        lightbox.classList.add("active");
        document.body.style.overflow = "hidden";
      }
    };

    // Close lightbox function
    const closeLightbox = () => {
      if (lightbox) {
        lightbox.classList.remove("active");
        document.body.style.overflow = "";
      }
    };

    // Add click handlers to all diary images
    diaryImages.forEach((img) => {
      const imgElement = img as HTMLImageElement;
      imgElement.style.cursor = "zoom-in";
      imgElement.addEventListener("click", (e) => {
        e.stopPropagation();
        openLightbox(imgElement);
      });
    });

    // Close handlers
    lightboxClose?.addEventListener("click", closeLightbox);
    lightboxOverlay?.addEventListener("click", closeLightbox);

    // ESC key handler
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && lightbox?.classList.contains("active")) {
        closeLightbox();
      }
    });
  };

  // Initialize on DOM ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", setupDiaryImageLightbox);
  } else {
    setupDiaryImageLightbox();
  }
</script>


---
interface Props {
    title: string;
    cover: string;
    url?: string;
    tags?: string[];
}

const { title, cover, url, tags = [] } = Astro.props;
---

<div class="book-card">
    <div class="cover-wrapper">
        <img src={cover} alt={title} loading="lazy" />
    </div>
    <div class="book-info">
        <h3 class="book-title">{title}</h3>

        {
            tags.length > 0 && (
                <div class="book-tags">
                    {tags.map((tag) => (
                        <span class="tag">{tag}</span>
                    ))}
                </div>
            )
        }

        {
            url ? (
                <a
                    href={url}
                    class="link-btn"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                    </svg>
                    下载链接
                </a>
            ) : (
                <span class="link-btn disabled" title="暂无链接">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                    </svg>
                    暂无链接
                </span>
            )
        }
    </div>
</div>

<style>
    .book-card {
        display: flex;
        flex-direction: column;
        background: var(--color-card-bg);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        box-shadow: var(--shadow-sm);
    }

    .book-card:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-lg);
        /* 彗星流光边框 */
        border: 2px solid transparent;
        background-color: transparent;
        background-image:
            linear-gradient(var(--color-card-bg, #ffffff), var(--color-card-bg, #ffffff)),
            conic-gradient(
                from var(--border-angle),
                transparent 0deg,
                var(--radial-c1) 40deg,
                var(--radial-c2) 70deg,
                transparent 100deg,
                transparent 360deg
            );
        background-clip: padding-box, border-box;
        background-origin: padding-box, border-box;
        animation: borderSpin 2.5s linear infinite;
        box-shadow: var(--shadow-lg), 0 0 16px color-mix(in srgb, var(--radial-c1) 40%, transparent);
    }

    .cover-wrapper {
        width: 100%;
        aspect-ratio: 8/9;
        overflow: hidden;
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-border);
        position: relative;
    }

    .cover-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .book-card:hover .cover-wrapper img {
        transform: scale(1.08);
    }

    .book-info {
        padding: 1.25rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
        gap: 0.75rem;
    }

    .book-title {
        margin: 0;
        font-size: 1rem;
        font-weight: 600;
        color: var(--color-text);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
    }

    .tag {
        font-size: 0.7rem;
        color: var(--color-text-light);
        background: var(--color-primary-subtle);
        padding: 0.25rem 0.6rem;
        border-radius: var(--radius-full);
        border: 1px solid var(--color-primary-light);
        font-weight: 500;
    }

    .link-btn {
        margin-top: auto;
        width: 100%;
        padding: 0.7rem;
        border: none;
        border-radius: var(--radius-md);
        background: var(--color-primary);
        color: white;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
    }

    .link-btn:hover:not(.disabled) {
        background: var(--color-primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .link-btn.disabled {
        background: var(--color-border-light);
        color: var(--color-text-muted);
        cursor: not-allowed;
        border: 1px solid var(--color-border);
    }

    .link-btn svg {
        width: 16px;
        height: 16px;
    }
</style>

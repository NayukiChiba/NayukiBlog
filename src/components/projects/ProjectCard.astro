---
interface Props {
  title: string;
  desc: string;
  url: string;
  tech?: string[];
}

const { title, desc, url, tech = [] } = Astro.props;
---

<div class="project-card">
  <div class="project-content">
    <div class="project-header">
      <h3 class="project-title">
        <span class="card-link">{title}</span>
      </h3>
      <!-- GitHub Icon -->
      <a href={url} target="_blank" class="icon-link" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
      </a>
    </div>
    <p class="project-desc">{desc}</p>
    
    {tech.length > 0 && (
      <div class="project-tags">
        {tech.map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</div>

<style>
  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    box-sizing: border-box;
    overflow: hidden;
    z-index: 1;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-hover);
    z-index: 10;
    /* 彗星流光边框 */
    border: 2px solid transparent;
    background-color: transparent;
    background-image:
        linear-gradient(var(--color-card-bg, #ffffff), var(--color-card-bg, #ffffff)),
        conic-gradient(
            from var(--border-angle),
            transparent 0deg,
            var(--radial-c1) 40deg,
            var(--radial-c2) 70deg,
            transparent 100deg,
            transparent 360deg
        );
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    animation: borderSpin 2.5s linear infinite;
    box-shadow: var(--shadow-hover), 0 0 16px color-mix(in srgb, var(--radial-c1) 40%, transparent);
  }

  .project-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.125rem;
  }

  .project-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    transition: color 0.2s ease;
    letter-spacing: -0.01em;
  }

  .project-card:hover .project-title {
    color: var(--color-primary);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
  }

  .project-desc {
    margin: 0 0 1.5rem 0;
    color: var(--color-text-light);
    font-size: 0.9375rem;
    line-height: 1.7;
    flex-grow: 1;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    margin-top: auto;
  }

  .tag {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    background: var(--color-border-light);
    color: var(--color-text-light);
    font-size: 0.8125rem;
    font-weight: 500;
    border-radius: var(--radius-full);
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .tag:first-child {
    background: var(--color-primary-subtle);
    color: var(--color-primary-dark);
  }

  .tag:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .tag:first-child:hover {
    background: rgba(255, 158, 181, 0.15);
    border-color: var(--color-primary-light);
  }

  .icon-link {
    color: var(--color-text-light);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    background: var(--color-border-light);
  }

  .icon-link:hover {
    color: var(--color-text);
    background: var(--color-border);
    transform: scale(1.1) rotate(5deg);
  }
</style>

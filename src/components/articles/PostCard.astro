---
interface Props {
    title: string;
    date: string;
    desc: string;
    url: string;
    tags?: string[];
    image?: string;
}

// Note: This component does not use Astro.glob. The warning likely comes from the parent page fetching posts.
const {
    title,
    date,
    desc,
    url,
    tags = [],
    image = "/profile.jpg",
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
});
---

<a href={url} class="post-card group" data-astro-prefetch="load">
    <div class="post-content">
        <div class="post-text">
            <div class="post-header">
                <span class="post-date">{formattedDate}</span>
                <h3 class="post-title">{title}</h3>
            </div>
            <p class="post-desc">{desc}</p>
            {
                tags.length > 0 && (
                    <div class="post-tags">
                        {tags.map((tag: string) => (
                            <span class="tag">{tag}</span>
                        ))}
                    </div>
                )
            }
        </div>
        {
            image && (
                <div class="post-cover">
                    <img src={image} alt={title} />
                </div>
            )
        }
    </div>
</a>

<style>
    .post-card {
        position: relative;
        display: block;
        background: var(--color-card-bg, #fff);
        border: 1px solid var(--color-border, #e8e8e8);
        border-radius: var(--radius-lg, 1rem);
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        margin-bottom: 1rem;
        overflow: hidden;
        isolation: isolate;
        box-shadow: var(--shadow-sm, 0 2px 4px rgba(0, 0, 0, 0.04));
    }

    .post-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md, 0 4px 12px rgba(0, 0, 0, 0.06));
        border-color: var(--color-primary-light, #ffb8ca);
    }

    /* Content Styles */
    .post-content {
        padding: 1.5rem;
        position: relative;
        z-index: 1;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .post-text {
        flex: 1;
        min-width: 0;
    }

    .post-cover {
        flex-shrink: 0;
        width: 130px;
        height: 130px;
        border-radius: var(--radius-md, 0.75rem);
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        display: none;
        background-color: var(--color-bg);
    }

    .post-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    @media (min-width: 640px) {
        .post-cover {
            display: block;
        }
    }

    .post-card:hover .post-cover img {
        transform: scale(1.1);
    }

    .post-header {
        margin-bottom: 0.8rem;
    }

    .post-date {
        display: block;
        font-size: 0.8rem;
        color: var(--color-text-muted, #9a9a9a);
        margin-bottom: 0.5rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        text-transform: uppercase;
    }

    .post-title {
        margin: 0;
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--color-text, #2d2d2d);
        line-height: 1.3;
        transition: color 0.2s ease;
    }
    
    .post-card:hover .post-title {
        color: var(--color-primary, #ff9eb5);
    }

    .post-desc {
        margin: 0 0 1.2rem 0;
        color: var(--color-text-light, #6b6b6b);
        font-size: 0.95rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        font-size: 0.75rem;
        color: var(--color-text-light, #6b6b6b);
        background: var(--color-bg, #fafafa);
        padding: 0.2rem 0.6rem;
        border-radius: 99px;
        transition: all 0.2s;
        border: 1px solid var(--color-border, #e8e8e8);
    }

    .post-card:hover .tag {
        background: var(--color-primary-subtle, rgba(255, 158, 181, 0.08));
        color: var(--color-primary-dark, #ff85a0);
        border-color: var(--color-primary-light, #ffb8ca);
    }
</style>

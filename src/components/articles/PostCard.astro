---
interface Props {
    title: string;
    date: string;
    desc: string;
    url: string;
    tags?: string[];
    image?: string;
}

// Note: This component does not use Astro.glob. The warning likely comes from the parent page fetching posts.
const {
    title,
    date,
    desc,
    url,
    tags = [],
    image = "/profile.jpg",
} = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
});
---

<a href={url} class="post-card group" data-astro-prefetch="load">
    <!-- 背景图片层 -->
    {image && (
        <div class="post-bg-image">
            <img src={image} alt="" aria-hidden="true" />
        </div>
    )}
    <!-- 渐变遮罩层 -->
    <div class="post-gradient-overlay"></div>
    
    <div class="post-content">
        <div class="post-text">
            <div class="post-header">
                <span class="post-date">{formattedDate}</span>
                <h3 class="post-title">{title}</h3>
            </div>
            <p class="post-desc">{desc}</p>
            {
                tags.length > 0 && (
                    <div class="post-tags">
                        {tags.map((tag: string) => (
                            <span class="tag">{tag}</span>
                        ))}
                    </div>
                )
            }
        </div>
    </div>
</a>

<style>
    .post-card {
        position: relative;
        display: block;
        background: var(--color-card-bg, #fff);
        border: 1px solid var(--color-border, #e8e8e8);
        border-radius: var(--radius-lg, 1rem);
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
        margin-bottom: 1rem;
        overflow: hidden;
        isolation: isolate;
        box-shadow: var(--shadow-sm, 0 2px 4px rgba(0, 0, 0, 0.04));
        cursor: pointer;
        min-height: 160px;
    }

    .post-card:hover {
        transform: translateY(-4px);
        box-shadow:
            var(--shadow-md, 0 4px 12px rgba(0, 0, 0, 0.06)),
            0 0 20px rgba(255, 158, 181, 0.15);
        /* 彗星流光边框 */
        border: 2px solid transparent;
        background-color: transparent;
        background-image:
            linear-gradient(var(--color-card-bg, #ffffff), var(--color-card-bg, #ffffff)),
            conic-gradient(
                from var(--border-angle),
                transparent 0deg,
                var(--radial-c1) 40deg,
                var(--radial-c2) 70deg,
                transparent 100deg,
                transparent 360deg
            );
        background-clip: padding-box, border-box;
        background-origin: padding-box, border-box;
        animation: borderSpin 2.5s linear infinite;
        box-shadow:
            var(--shadow-md, 0 4px 12px rgba(0, 0, 0, 0.06)),
            0 0 16px color-mix(in srgb, var(--radial-c1) 40%, transparent);
    }

    /* 背景图片 - 贴在右侧 */
    .post-bg-image {
        position: absolute;
        top: 0;
        right: 0;
        width: 45%;
        height: 100%;
        z-index: 0;
        overflow: hidden;
    }

    .post-bg-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.5s ease, filter 0.3s ease;
    }

    .post-card:hover .post-bg-image img {
        transform: scale(1.05);
    }

    /* 渐变遮罩 - 从左到右逐渐透明，同时左侧模糊 */
    .post-gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1;
        background: linear-gradient(
            to right,
            var(--color-card-bg, #fff) 0%,
            var(--color-card-bg, #fff) 40%,
            rgba(255, 255, 255, 0.95) 50%,
            rgba(255, 255, 255, 0.7) 65%,
            rgba(255, 255, 255, 0.3) 80%,
            transparent 100%
        );
        pointer-events: none;
    }

    /* 给图片添加模糊渐变效果 */
    .post-bg-image::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 60%;
        height: 100%;
        z-index: 1;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        mask-image: linear-gradient(to right, black 0%, transparent 100%);
        -webkit-mask-image: linear-gradient(to right, black 0%, transparent 100%);
    }

    /* Content Styles */
    .post-content {
        padding: 1.5rem;
        position: relative;
        z-index: 2;
        display: flex;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .post-text {
        flex: 1;
        min-width: 0;
        max-width: 65%;
    }

    .post-header {
        margin-bottom: 0.8rem;
    }

    .post-date {
        display: block;
        font-size: 0.8rem;
        color: var(--color-text-muted, #9a9a9a);
        margin-bottom: 0.5rem;
        font-weight: 500;
        letter-spacing: 0.02em;
        text-transform: uppercase;
    }

    .post-title {
        margin: 0;
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--color-text, #2d2d2d);
        line-height: 1.3;
        transition: color 0.2s ease;
    }
    
    .post-card:hover .post-title {
        color: var(--color-primary, #ff9eb5);
    }

    .post-desc {
        margin: 0 0 1.2rem 0;
        color: var(--color-text-light, #6b6b6b);
        font-size: 0.95rem;
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        font-size: 0.75rem;
        color: var(--color-text-light, #6b6b6b);
        background: rgba(255, 255, 255, 0.9);
        padding: 0.2rem 0.6rem;
        border-radius: 99px;
        transition: all 0.2s;
        border: 1px solid var(--color-border, #e8e8e8);
        backdrop-filter: blur(4px);
    }

    .post-card:hover .tag {
        background: var(--color-primary-subtle, rgba(59, 130, 246, 0.08));
        color: var(--color-primary-dark, #1d4ed8);
        border-color: var(--color-primary-light, #93c5fd);
    }

    /* 移动端适配 - 图片隐藏 */
    @media (max-width: 639px) {
        .post-bg-image {
            display: none;
        }
        
        .post-gradient-overlay {
            display: none;
        }
        
        .post-text {
            max-width: 100%;
        }
        
        .post-card {
            min-height: auto;
        }
    }

    /* 减少动画偏好 */
    @media (prefers-reduced-motion: reduce) {
        .post-card,
        .post-bg-image img {
            transition: none;
        }
    }
</style>

<div class="github-activity-card">
  <img src="https://ghchart.rshah.org/FF69B4/NayukiChiba" alt="NayeyYe's Github Chart" loading="lazy" />
</div>

<style>
  .github-activity-card {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    overflow: hidden;
    height: 160px;
    flex: 1;
    opacity: 0.6;
    min-width: 0;
    transition: opacity 0.3s ease;
  }

  .github-activity-card:hover {
    opacity: 0.9;
  }

  .github-activity-card img {
    height: 100%;
    width: auto;
    max-width: 100%;
    object-fit: cover;
    object-position: right;
  }

  @media (max-width: 767px) {
    .github-activity-card {
      height: 120px;
      justify-content: center;
      overflow-x: auto;
    }

    .github-activity-card img {
      height: 100%;
      width: auto;
      object-fit: contain;
    }
  }
</style>

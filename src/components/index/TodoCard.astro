---
interface Todo {
  id: string | number;
  task: string;
  completed: boolean;
  priority?: string;
  type?: string;
}

interface Props {
  todos?: Todo[];
}

const { todos = [] } = Astro.props;

// Filter: Only show active (not completed) short-term tasks
const displayTodos = todos.filter(t => !t.completed && t.type === 'short-term');
---

<div class="todo-card">
  <div class="todo-header">
    <span class="todo-title">Short-term Goals</span>
  </div>
  <div class="todo-list">
    {displayTodos.length > 0 ? (
      displayTodos.map(todo => (
        <div class="todo-item">
          <div class="todo-checkbox"></div>
          <span class="todo-text">{todo.task}</span>
        </div>
      ))
    ) : (
      <div class="empty-text">No active tasks</div>
    )}
  </div>
</div>

<style>
  /* Todo Card Styles */
  .todo-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    height: 160px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease;
    position: relative;
    overflow: visible;
  }

  .todo-card:hover {
    transform: translateY(-4px);
    /* 彗星流光边框 */
    border: 2px solid transparent;
    background-color: transparent;
    background-image:
      linear-gradient(var(--color-card-bg, #ffffff), var(--color-card-bg, #ffffff)),
      conic-gradient(
        from var(--border-angle),
        transparent 0deg,
        var(--radial-c1) 40deg,
        var(--radial-c2) 70deg,
        transparent 100deg,
        transparent 360deg
      );
    background-clip: padding-box, border-box;
    background-origin: padding-box, border-box;
    animation: borderSpin 2.5s linear infinite;
    box-shadow: var(--shadow-md), 0 0 16px color-mix(in srgb, var(--radial-c1) 40%, transparent);
  }

  .todo-header {
    margin-bottom: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .todo-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .todo-list {
    overflow-y: auto;
    flex: 1;
    padding-right: 4px;
  }

  /* Custom Scrollbar for Todo List */
  .todo-list::-webkit-scrollbar {
    width: 4px;
  }
  .todo-list::-webkit-scrollbar-track {
    background: transparent;
  }
  .todo-list::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }
  .todo-list::-webkit-scrollbar-thumb:hover {
    background: var(--color-primary);
  }

  .todo-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    cursor: default;
    transition: all 0.2s ease;
  }

  .todo-item:hover {
    padding-left: 0.25rem;
  }

  .todo-checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .todo-item:hover .todo-checkbox {
    border-color: var(--color-primary);
    background: var(--color-primary-subtle);
    transform: scale(1.1);
  }

  .todo-text {
    font-size: 0.875rem;
    color: var(--color-text-light);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.5;
  }

  .empty-text {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-align: center;
    padding-top: 1.5rem;
    font-style: italic;
  }

  @media (min-width: 768px) {
    .todo-card {
      width: 220px;
      flex-shrink: 0;
    }
  }
</style>

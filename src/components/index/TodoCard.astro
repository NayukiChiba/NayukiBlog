---
interface Todo {
  id: string | number;
  task: string;
  completed: boolean;
  priority?: string;
  type?: string;
}

interface Props {
  todos?: Todo[];
}

const { todos = [] } = Astro.props;

// Filter: Only show active (not completed) short-term tasks
const displayTodos = todos.filter(t => !t.completed && t.type === 'short-term');
---

<div class="todo-card">
  <div class="todo-header">
    <span class="todo-title">Short-term Goals</span>
  </div>
  <div class="todo-list">
    {displayTodos.length > 0 ? (
      displayTodos.map(todo => (
        <div class="todo-item">
          <div class="todo-checkbox"></div>
          <span class="todo-text">{todo.task}</span>
        </div>
      ))
    ) : (
      <div class="empty-text">No active tasks</div>
    )}
  </div>
</div>

<style>
  /* Todo Card Styles */
  .todo-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    height: 160px;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .todo-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-primary-light));
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .todo-card:hover::before {
    transform: scaleX(1);
  }

  .todo-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .todo-header {
    margin-bottom: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .todo-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .todo-list {
    overflow-y: auto;
    flex: 1;
    padding-right: 4px;
  }

  /* Custom Scrollbar for Todo List */
  .todo-list::-webkit-scrollbar {
    width: 4px;
  }
  .todo-list::-webkit-scrollbar-track {
    background: transparent;
  }
  .todo-list::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }
  .todo-list::-webkit-scrollbar-thumb:hover {
    background: var(--color-primary);
  }

  .todo-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    cursor: default;
    transition: all 0.2s ease;
  }

  .todo-item:hover {
    padding-left: 0.25rem;
  }

  .todo-checkbox {
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-border);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .todo-item:hover .todo-checkbox {
    border-color: var(--color-primary);
    background: var(--color-primary-subtle);
    transform: scale(1.1);
  }

  .todo-text {
    font-size: 0.875rem;
    color: var(--color-text-light);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.5;
  }

  .empty-text {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-align: center;
    padding-top: 1.5rem;
    font-style: italic;
  }

  @media (min-width: 768px) {
    .todo-card {
      width: 220px;
      flex-shrink: 0;
    }
  }
</style>

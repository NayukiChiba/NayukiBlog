        object-fit: contain;
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
    }

    .lightbox-info {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 1rem 1.5rem;
        border-radius: 12px;
        text-align: center;
        max-width: 600px;
    }

    .lightbox-info h3 {
        margin: 0;
        font-size: 1.2rem;
        color: #333;
    }


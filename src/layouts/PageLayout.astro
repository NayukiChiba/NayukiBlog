---
import Header from "../components/Header.astro";
import FloatingButton from "../components/FloatingButton.astro";
import CdnPreloader from "../components/CdnPreloader.astro";
import ParticleBackground from "../components/ParticleBackground.astro";
import ProgressBar from "../components/ProgressBar.astro";
import "../styles/global.css"; // Import global styles

interface Props {
  title: string;
  description?: string;
  needsMath?: boolean; // 是否需要加载 KaTeX
}

const {
  title,
  description = "A personal website",
  needsMath = false,
} = Astro.props;
const apiBase = import.meta.env.PUBLIC_API_BASE || "";
---

<!doctype html>
<html lang="zh-cn">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- 字体预连接 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- KaTeX CSS - 仅在需要数学公式时加载，使用 CDN -->
    {
      needsMath && (
        <link
          rel="stylesheet"
          href="https://cdn.staticfile.net/KaTeX/0.16.9/katex.min.css"
          crossorigin="anonymous"
        />
      )
    }

    <style is:global>
      :root {
        --max-width: 1000px;
        --content-padding: 1.5rem;
      }

      html {
        scrollbar-gutter: stable;
        overflow-x: hidden;
      }

      body {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden;
        background: var(--color-bg);
      }

      main {
        flex: 1;
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2.5rem var(--content-padding);
        position: relative;
        z-index: 1;
      }

      /* 移动端响应式 */
      @media (max-width: 1023px) {
        :root {
          --content-padding: 1rem;
        }

        html {
          scrollbar-gutter: auto;
        }

        main {
          padding: 2rem var(--content-padding);
        }
      }
    </style>
    
    <!-- ⬇️ 防止样式闪烁 (FOUC) 的脚本：在页面渲染前立即应用用户设置的主题色 -->
    <script is:inline>
      (function() {
        try {
          // 立即获取存储的主题
          const storedColor = localStorage.getItem('theme-color');
          const storedGradient = localStorage.getItem('theme-gradient');
          const root = document.documentElement;

          // 辅助函数：应用极速模式
          const applyTheme = (color, gradient) => {
             // 强制重置旧的紫色 (#8b5cf6) 或粉色 (#ff9eb5) 到新的默认蓝色 (#3b82f6)
             if (color === '#8b5cf6' || color === '#ff9eb5') {
                 color = '#3b82f6';
                 gradient = null;
                 localStorage.removeItem('theme-color');     // 清除旧的
                 localStorage.removeItem('theme-gradient');  // 清除旧的
                 // 不保存新的，让它回退到 CSS 默认值，或者保存新的蓝色
                 localStorage.setItem('theme-color', color);
             }

             root.style.setProperty('--color-primary', color);
             if (gradient) {
                root.style.setProperty('--gradient-primary', gradient);
                root.style.setProperty('--gradient-text', gradient);
             } else {
                // 如果没有渐变，生成一个基于单色的渐变（兼容旧数据）
                const fallback = `linear-gradient(135deg, ${color} 0%, ${color} 100%)`;
                root.style.setProperty('--gradient-primary', fallback);
                root.style.setProperty('--gradient-text', fallback);
             }
          };

          if (storedColor) {
            applyTheme(storedColor, storedGradient);
          }
          
          // 监听 astro:after-swap 事件以支持 View Transitions 导航时的样式保持
          document.addEventListener('astro:after-swap', () => {
             const c = localStorage.getItem('theme-color');
             const g = localStorage.getItem('theme-gradient');
             if(c) applyTheme(c, g);
          });
          
        } catch (e) {
          console.error('Failed to restore theme color:', e);
        }
      })();
    </script>
  </head>
  <body>
    <script>
      declare global {
        interface Window {
          _titleEffectHandler?: (e: MouseEvent) => void;
        }
      }

      function initTitleEffect() {
        const titles = document.querySelectorAll<HTMLElement>(".page-title");
        if (titles.length === 0) return;

        const handleMouseMove = (e: MouseEvent) => {
          const windowWidth = window.innerWidth;
          const mouseXPercentage = (e.clientX / windowWidth) * 100;

          titles.forEach((title) => {
            const rect = title.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;

            // 角度计算：保持原来的逻辑，用于微调渐变方向
            const angle =
              (Math.atan2(e.clientY - centerY, e.clientX - centerX) * 180) /
              Math.PI;

            // 位置计算：反向移动背景以模拟光源移动效果 (Parallax)
            // 鼠标在左(0%) -> 背景位置向右移(更小%)
            // 实际上 background-position 百分比对应图片和容器的对齐点。
            // 想要高光跟随鼠标，当鼠标在左边，高光应该在左边。
            // 渐变中心是 50%。
            // 简单的映射：鼠标位置 0-100% -> bg-pos 0-100%
            const bgPosX = mouseXPercentage;

            title.style.setProperty("--bg-angle", `${angle + 90}deg`);
            title.style.setProperty("--bg-pos-x", `${bgPosX}%`);
          });
        };

        // 移除旧的监听器以防重复
        if (window._titleEffectHandler) {
          document.removeEventListener("mousemove", window._titleEffectHandler);
        }
        window._titleEffectHandler = handleMouseMove;
        document.addEventListener("mousemove", window._titleEffectHandler);
      }

      // 支持普通加载和 Astro View Transitions
      document.addEventListener("DOMContentLoaded", initTitleEffect);
      document.addEventListener("astro:page-load", initTitleEffect);
    </script>
    <script define:vars={{ apiBase }}>
      window.API_BASE = apiBase;
    </script>
    <Header />
    <main>
      <slot />
    </main>
    <footer>
      <p>
        &copy; {new Date().getFullYear()} Nayuki. All rights reserved.
      </p>
    </footer>
    <FloatingButton />
    <CdnPreloader />
    <ParticleBackground />
    <ProgressBar />
  </body>
</html>

<style>
  /* Footer styles specific to layout */
  footer {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    border-top: 1px solid var(--color-border);
    margin-top: auto;
    background: var(--color-bg-secondary);
    position: relative;
    z-index: 1;
  }

  @media (max-width: 767px) {
    footer {
      padding: 2rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>

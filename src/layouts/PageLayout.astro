---
import Header from "../components/Header.astro";
import FloatingButton from "../components/FloatingButton.astro";import SakanaWidgetComponent from '../components/SakanaWidget.astro';import CdnPreloader from "../components/CdnPreloader.astro";
import ParticleBackground from "../components/ParticleBackground.astro";
import ProgressBar from "../components/ProgressBar.astro";
import "../styles/global.css"; // Import global styles

interface Props {
  title: string;
  description?: string;
  needsMath?: boolean; // 是否需要加载 KaTeX
}

const {
  title,
  description = "A personal website",
  needsMath = false,
} = Astro.props;
const apiBase = import.meta.env.PUBLIC_API_BASE || "";
---

<!doctype html>
<html lang="zh-cn">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- 字体预连接 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- KaTeX CSS - 仅在需要数学公式时加载，使用 CDN -->
    {
      needsMath && (
        <link
          rel="stylesheet"
          href="https://cdn.staticfile.net/KaTeX/0.16.9/katex.min.css"
          crossorigin="anonymous"
        />
      )
    }

    <style is:global>
      :root {
        --max-width: 1000px;
        --content-padding: 1.5rem;
      }

      html {
        scrollbar-gutter: stable;
        overflow-x: hidden;
      }

      body {
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overflow-x: hidden;
        /* 背景改为透明，由 global.css body::before 提供动态径向渐变背景 */
        background: transparent;
      }

      main {
        flex: 1;
        width: 100%;
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 2.5rem var(--content-padding);
        position: relative;
        z-index: 1;
      }

      /* 移动端响应式 */
      @media (max-width: 1023px) {
        :root {
          --content-padding: 1rem;
        }

        html {
          scrollbar-gutter: auto;
        }

        main {
          padding: 2rem var(--content-padding);
        }
      }
    </style>
    
    <!-- ⬇️ 防止样式闪烁 (FOUC) 的脚本：在页面渲染前立即应用用户设置的主题色 -->
    <script is:inline>
      (function() {
        try {
          // 立即获取存储的主题 - Clashing Colors Update
          const c1 = localStorage.getItem('theme-color-1');
          const c2 = localStorage.getItem('theme-color-2');
          const root = document.documentElement;

          // 核心：强制应用新的撞色变量，并覆盖旧逻辑
          if (c1 && c2) {
              root.style.setProperty('--color-primary', c1);
              root.style.setProperty('--color-secondary', c2);
              // 移除强制纯色，恢复 CSS 渐变定义
              // root.style.setProperty('--gradient-primary', c1); 
              // root.style.setProperty('--gradient-text', c1);    
              root.style.setProperty('--color-accent', c2);
          } else {
              // 如果没有存储，使用默认的撞色 (#FBC6B5, #F0CFE3)
              root.style.setProperty('--color-primary', '#FBC6B5');
              root.style.setProperty('--color-secondary', '#F0CFE3');
              // root.style.setProperty('--gradient-primary', '#FBC6B5');
              // root.style.setProperty('--gradient-text', '#FBC6B5');
              root.style.setProperty('--color-accent', '#F0CFE3');
          }

          // 清理旧的存储以防干扰
          localStorage.removeItem('theme-gradient'); 
          // 不一定要清除 theme-color，但新逻辑优先检查 theme-color-1/2

          // 监听 astro:after-swap 事件
          document.addEventListener('astro:after-swap', () => {
             const nc1 = localStorage.getItem('theme-color-1');
             const nc2 = localStorage.getItem('theme-color-2');
             if (nc1 && nc2) {
                root.style.setProperty('--color-primary', nc1);
                root.style.setProperty('--color-secondary', nc2);
                root.style.setProperty('--gradient-primary', nc1);
                root.style.setProperty('--gradient-text', nc1);
                root.style.setProperty('--color-accent', nc2);
             }
          });
          

        } catch (e) {
          console.error('Failed to restore theme color:', e);
        }
      })();
    </script>
  </head>
  <body>
    <script>
      declare global {
        interface Window {
          _titleEffectHandler?: (e: MouseEvent) => void;
        }
      }

      function initTitleEffect() {
        const titles = document.querySelectorAll<HTMLElement>(".page-title");
        if (titles.length === 0) return;

        const handleMouseMove = (e: MouseEvent) => {
          const windowWidth = window.innerWidth;
          const mouseXPercentage = (e.clientX / windowWidth) * 100;

          titles.forEach((title) => {
            const rect = title.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;

            // 角度计算：保持原来的逻辑，用于微调渐变方向
            const angle =
              (Math.atan2(e.clientY - centerY, e.clientX - centerX) * 180) /
              Math.PI;

            // 位置计算：反向移动背景以模拟光源移动效果 (Parallax)
            // 鼠标在左(0%) -> 背景位置向右移(更小%)
            // 实际上 background-position 百分比对应图片和容器的对齐点。
            // 想要高光跟随鼠标，当鼠标在左边，高光应该在左边。
            // 渐变中心是 50%。
            // 简单的映射：鼠标位置 0-100% -> bg-pos 0-100%
            const bgPosX = mouseXPercentage;

            title.style.setProperty("--bg-angle", `${angle + 90}deg`);
            title.style.setProperty("--bg-pos-x", `${bgPosX}%`);
          });
        };

        // 移除旧的监听器以防重复
        if (window._titleEffectHandler) {
          document.removeEventListener("mousemove", window._titleEffectHandler);
        }
        window._titleEffectHandler = handleMouseMove;
        document.addEventListener("mousemove", window._titleEffectHandler);
      }

      // 支持普通加载和 Astro View Transitions
      document.addEventListener("DOMContentLoaded", initTitleEffect);
      document.addEventListener("astro:page-load", initTitleEffect);
    </script>
    <script define:vars={{ apiBase }}>
      window.API_BASE = apiBase;
    </script>
    <Header />
    <main>
      <slot />
    </main>
    <footer>
      <p>
        &copy; {new Date().getFullYear()} Nayuki. All rights reserved.
      </p>
    </footer>
    <FloatingButton />
    <CdnPreloader />
    <ParticleBackground />
    <ProgressBar />
    <SakanaWidgetComponent />
  </body>
</html>

<style>
  /* Footer styles specific to layout */
  footer {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    border-top: 1px solid var(--color-border);
    margin-top: auto;
    background: var(--color-bg-secondary);
    position: relative;
    z-index: 1;
  }

  @media (max-width: 767px) {
    footer {
      padding: 2rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>

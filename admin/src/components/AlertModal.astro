---
// AlertModal.astro
---

<div id="custom-alert-modal" class="modal-overlay hidden" style="z-index: 2200;">
  <div class="modal-card alert-card">
    <div class="alert-icon">
      <i class="fas fa-exclamation-circle"></i>
    </div>
    <div class="alert-content">
      <h3 class="alert-title">Error</h3>
      <p class="alert-message" id="custom-alert-message"></p>
    </div>
    <div class="alert-footer">
      <button class="btn btn-confirm close-alert-btn">OK</button>
    </div>
  </div>
</div>

<style>
  /* Alert Modal Styles */
  :global(.alert-card) {
    width: 400px;
    max-width: 90%;
    padding: 2rem;
    text-align: center;
    align-items: center;
    gap: 1rem;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    animation: modal-slide-in 0.3s ease;
  }

  :global(.alert-icon) {
    font-size: 3rem;
    color: #d32f2f;
    margin-bottom: 0.5rem;
  }

  :global(.alert-title) {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: #333;
    font-weight: 600;
  }

  :global(.alert-message) {
    margin: 0;
    color: #666;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  :global(.alert-footer) {
    margin-top: 1rem;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  :global(.alert-footer .btn) {
    min-width: 100px;
    background: #d32f2f;
    border-color: #d32f2f;
    color: white;
    padding: 0.6rem 1.5rem;
    border-radius: 6px;
    font-size: 0.95rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  :global(.alert-footer .btn:hover) {
    background: #b71c1c;
    border-color: #b71c1c;
  }

  :global(.modal-overlay) {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    backdrop-filter: blur(2px);
  }

  :global(.modal-overlay.hidden) {
    display: none;
  }
</style>

<script>
  // Define the interface for the global function
  declare global {
    interface Window {
      showAdminAlert: (message: string, type?: 'error' | 'success' | 'info') => void;
    }
  }

  const alertModal = document.getElementById('custom-alert-modal');
  const alertMessage = document.getElementById('custom-alert-message');
  const alertTitle = alertModal?.querySelector('.alert-title');
  const alertIcon = alertModal?.querySelector('.alert-icon i');
  const closeAlertBtns = alertModal?.querySelectorAll('.close-alert-btn');

  // Global function to show alert
  window.showAdminAlert = (message: string, type = 'error') => {
    if (!alertModal || !alertMessage) return;
    
    alertMessage.textContent = message;
    
    // Reset styles
    const iconContainer = alertModal.querySelector('.alert-icon') as HTMLElement;
    const btn = alertModal.querySelector('.btn') as HTMLElement;
    
    if (type === 'error') {
        if (alertTitle) alertTitle.textContent = 'Error';
        if (alertIcon) alertIcon.className = 'fas fa-exclamation-circle';
        if (iconContainer) iconContainer.style.color = '#d32f2f';
        if (btn) {
            btn.style.backgroundColor = '#d32f2f';
            btn.style.borderColor = '#d32f2f';
        }
    } else if (type === 'success') {
        if (alertTitle) alertTitle.textContent = 'Success';
        if (alertIcon) alertIcon.className = 'fas fa-check-circle';
        if (iconContainer) iconContainer.style.color = '#28a745';
        if (btn) {
            btn.style.backgroundColor = '#28a745';
            btn.style.borderColor = '#28a745';
        }
    } else {
        if (alertTitle) alertTitle.textContent = 'Info';
        if (alertIcon) alertIcon.className = 'fas fa-info-circle';
        if (iconContainer) iconContainer.style.color = '#0066cc';
        if (btn) {
            btn.style.backgroundColor = '#0066cc';
            btn.style.borderColor = '#0066cc';
        }
    }

    alertModal.classList.remove('hidden');
  };

  closeAlertBtns?.forEach(btn => {
    btn.addEventListener('click', () => {
      alertModal?.classList.add('hidden');
    });
  });

  alertModal?.addEventListener('click', (e) => {
    if (e.target === alertModal) {
      alertModal.classList.add('hidden');
    }
  });
</script>
---
export const prerender = false;

import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import ProjectList from '../components/projects/ProjectList.astro';
import ProjectFilter from '../components/projects/ProjectFilter.astro';
import ProjectCreate from '../components/projects/ProjectCreate.astro';
import AlertModal from '../components/AlertModal.astro';

// Auth check
const authCookie = Astro.cookies.get('auth_token');
if (!authCookie || authCookie.value !== 'authorized') {
  return Astro.redirect('/admin/login', 302);
}

const apiBase = import.meta.env.PUBLIC_API_BASE || '';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Management - Nayuki Blog Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script define:vars={{ apiBase }}>
        window.API_BASE = apiBase;
    </script>
</head>
<body>
    <Header />
    
    <main class="admin-container">
        <Sidebar />

        <div class="content-area">
            <div class="page-header">
                <h2>Project Management</h2>
            </div>

            <div class="management-panel">
                <div class="panel-column">
                    <ProjectFilter />
                </div>
                <div class="panel-column">
                    <ProjectCreate />
                </div>
            </div>

            <ProjectList />
        </div>
        <AlertModal />
    </main>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #ffffff;
        }

        .admin-container {
            display: flex;
            min-height: calc(100vh - 60px);
        }

        .content-area {
            flex-grow: 1;
            overflow-x: hidden;
            padding: 20px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .page-header h2 {
            margin: 0;
            color: #303133;
            font-size: 24px;
        }

        .management-panel {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }

        .panel-column {
            flex: 1;
            min-width: 0; /* Prevent flex item overflow */
        }

        .btn-primary {
            background: #000000;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.3s;
        }

        .btn-primary:hover {
            background: #333333;
        }

        @media (max-width: 1023px) {
            .admin-container {
                flex-direction: column;
            }

            .content-area {
                padding: 1rem;
            }

            .page-header {
                flex-direction: column;
                align-items: stretch;
                gap: 1rem;
            }

            .page-header h2 {
                text-align: center;
                font-size: 1.5rem;
            }

            .btn-primary {
                justify-content: center;
            }

            .management-panel {
                flex-direction: column;
                gap: 1rem;
            }
        }
    </style>
</body>
</html>
